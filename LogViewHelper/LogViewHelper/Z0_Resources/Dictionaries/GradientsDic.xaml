<ResourceDictionary x:Class="LogViewHelper.Z0_Resources.Dictionaries.GradientsDic"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/UseAbilities.Visual;component/Colors\ColorsDic.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <RadialGradientBrush x:Key="WhiteGlassGB" Center="0.5,0.1" RadiusX="0.65" Opacity="0.5">
        <GradientStop Color="#AAFFFFFF" Offset="0.7"/>
        <GradientStop Color="#33FFFFFF" Offset="1"/>
    </RadialGradientBrush>
    
    <LinearGradientBrush x:Key="AzureToSkieyGB" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="{StaticResource Azure}" Offset="0.4"/>
        <GradientStop Color="{StaticResource Skiey}" Offset="1"/>
    </LinearGradientBrush>
</ResourceDictionary>
